<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="relative.ifpb.edu.br.splash.MainActivity"
    android:background="#f9faf7">


    <ImageButton
        android:layout_width="345px"
        android:layout_height="500px"
        android:id="@+id/img44"
        android:src="@drawable/img44"
        android:layout_alignParentStart="true"
        android:onClick="abrirArte"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="345px"
        android:layout_height="500px"
        android:id="@+id/img12"
        android:src="@drawable/mod"
        android:onClick="abrirZuera"
        android:layout_toEndOf="@+id/img44" />

    <ImageButton
        android:layout_width="345px"
        android:layout_height="500px"
        android:id="@+id/img31"
        android:src="@drawable/bat"
        android:onClick="abrirGeek"
        android:layout_below="@+id/img44"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="345px"
        android:layout_height="500px"
        android:id="@+id/img1"
        android:src="@drawable/cat"
        android:onClick="abrirShow"
        android:layout_toEndOf="@+id/img44"
        android:layout_alignBottom="@+id/img31"
        android:layout_below="@+id/img12" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Arte Renascentista"
        android:id="@+id/textView"
        android:textColor="#d2c9c9"
        android:layout_marginEnd="22dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_toStartOf="@+id/img12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Arte ConteporÃ¢nea"
        android:id="@+id/textView2"
        android:textColor="#cbc3c3"
        android:layout_above="@+id/img1"
        android:layout_alignEnd="@+id/img12"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Geek"
        android:id="@+id/textView3"
        android:textColor="#d3c7c7"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Giffs"
        android:id="@+id/textView4"
        android:layout_marginStart="26dp"
        android:textColor="#847979"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/textView2" />

</RelativeLayout>
